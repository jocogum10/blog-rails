<%= form_with scope: :user ,url: create_user_path, local: true do |f| %>
    
    <p>
        <% if @user.errors.any?  %>
            <ul>
                <% @user.errors.full_messages.each do |message| %>
                    <li>
                        <%= message %>
                    </li>
                <% end %>
            </ul>
        <% end %>
    </p>
    
    <div class="mb-3">
        <%= f.label :name, for:"name", class:"form-label" %>
        <%= f.text_field :name, class: "form-control", id:"name" %>
    </div>
    <div class="mb-3">
        <%= f.label :password, for:"password", class:"form-label" %>
        <%= f.text_area :password, class: "form-control", id:"password" %>
    </div>
    <div class="mb-3">
        <%= f.submit class: "btn btn-primary" %>
        <%= link_to "Back to Users", users_path, class: "btn btn-primary", role: "button" %>
    </div>
<% end %>