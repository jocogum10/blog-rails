
<%= form_with scope: :user ,url: update_user_path, method: :patch, local: true do |f| %>
    
    <div class="mb-3">
    <%= f.label 'User Name', for:"name", class:"form-label" %>
    <%= f.text_field :name, class: "form-control", id:"name" %>
    </div>
    <div class="mb-3">
    <%= f.label 'User Password', for:"password", class:"form-label" %><br>
    <%= f.text_area :password, class: "form-control", id:"password" %><br>
    </div>
    <div class="mb-3">
    <%= f.submit "Edit User", class:"btn btn-primary" %>
    </div>
<% end %>
