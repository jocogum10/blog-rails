
<h1>Blog Articles</h1>
<hr class="my-4"/>
<table class='table'>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Body</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.id %></td>
        <td><%= article.name %></td>
        <td><%= article.body %></td>
        <td><%= button_to "Edit", edit_article_path(article.id), {method: :get, class: "btn btn-info"} %></td>
        <td><%= button_to "Delete", delete_article_path(article.id), {method: :delete, class: "btn btn-danger"} %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= button_to '+ New Article' , new_article_path, {method: :get, class: "btn btn-primary"} %>
