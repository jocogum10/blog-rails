<head>
<!-- CSS only -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
</head>

<body>



<div class="container">

<h1>Blog Articles</h1>
<hr class="my-4"/>
<table class='table'>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Body</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <th><%= article.id %></th>
        <th><%= article.name %></th>
        <th><%= article.body %></th>
        <th><%= button_to "Edit Article", edit_article_path(article.id), {method: :get, class: "btn btn-info"} %></th>
        <th><%= button_to "Delete Article", delete_article_path(article.id), {method: :delete, class: "btn btn-danger"} %></th>
      </tr>
    <% end %>
  </tbody>
</table>
<%= button_to 'New Article' , new_article_path, {method: :get, class: "btn btn-primary"} %>
</div>



<!-- JavaScript Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
</body>